<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg1"
        />

    <ImageView
        android:id="@+id/imageView_kurisu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-152dp"
        android:src="@drawable/kurisu_happy1" />

    <ImageView
        android:id="@+id/imageView_subtitles"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/subtitle_frame_big" />

    <ImageView
        android:id="@+id/imageView_logo_small"
        android:layout_width="89dp"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="26dp"
        android:src="@drawable/amadeus_icon_smaller" />

    <TextView
        android:id="@+id/textView_subtitles"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/imageView_subtitles"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/roboto_mono"
        android:gravity="start"
        android:shadowColor="#000"
        android:shadowRadius="2"
        android:textAlignment="gravity"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#FFF"
        android:textSize="20.0sp"
        android:typeface="monospace" />

</RelativeLayout>